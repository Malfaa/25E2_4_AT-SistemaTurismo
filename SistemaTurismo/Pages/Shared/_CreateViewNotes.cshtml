@model SistemaTurismo.Pages.Nota

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
    <div class="form-group mb-3">
        <label asp-for="NomeDoArquivo" class="form-label"></label>
        <input asp-for="NomeDoArquivo" class="form-control" />
        <span asp-validation-for="NomeDoArquivo" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Conteudo" class="form-label"></label>
        <textarea asp-for="Conteudo" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Conteudo" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar Anotação</button>
</form>