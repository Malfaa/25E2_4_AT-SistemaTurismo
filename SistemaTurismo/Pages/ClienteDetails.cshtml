@page "/ClienteDetails/{id:int}"
@model SistemaTurismo.Pages.ClienteDetails

@{
    ViewData["Title"] = "Detalhes do Cliente";
}
<div class="container mt-4">
    @if (Model.Cliente != null)
    {
        <h1 class="display-4">@ViewData["Title"]</h1>
        <hr />

        <div class="card">
            <div class="card-header">
                Informações do Cliente
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">ID do Cliente:</dt>
                    <dd class="col-sm-9">@Model.Cliente.Id</dd>

                    <dt class="col-sm-3">Nome Completo:</dt>
                    <dd class="col-sm-9">@Model.Cliente.Nome</dd>

                    <dt class="col-sm-3">E-mail:</dt>
                    <dd class="col-sm-9">@Model.Cliente.Email</dd>
                </dl>
            </div>
        </div>
        <div class="mt-3">
            <a asp-page="./Index" class="btn btn-outline-primary">Voltar para a Lista</a>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <h2>Cliente não encontrado</h2>
            <p>O cliente com o identificador solicitado não foi encontrado em nosso sistema.</p>
            <a asp-page="./Index" class="btn btn-secondary">Voltar</a>
        </div>
    }
</div>